<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lista de usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <!--cabeçalho da pagina-->
            <div class="row">
                <h2>NODE - CRUD <span class="badge text-bg-secondary"> v1.0.0</span></h2>
            </div>
        </div>
        <div class="row">
            <p><a class="btn btn-sucess" href="/add">Adicionar</a></p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOME</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">AÇÃO</th>
                    </tr>
                </thead>
                <Tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><a class="btn btn-primary" href="/edit/<%= user.id %>">Editar</a>
                                <a class="btn btn-danger" href="/delete/<%= user.id %>">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </Tbody>
            </table>

        </div>
    </div>
</body>
</html>